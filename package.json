{
  "name": "navcertitrans",
  "version": "1.2.8",
  "description": "Navigateur personnalis√© pour CertiTrans",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dev": "vite",
    "build": "vite build",
    "prepare": "vite build",
    "preview": "vite preview",
    "start:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\""
  },
  "build": {
    "appId": "com.certitrans.browser",
    "productName": "NavCertiTrans",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "src/assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github",
      "owner": "Azed-Oume",
      "repo": "NavCertiTrans"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/icon.ico"
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NavCertiTrans"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icons/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Azed-Oume/NavCertiTrans.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Azed-Oume/NavCertiTrans/issues"
  },
  "homepage": "https://github.com/Azed-Oume/NavCertiTrans#readme",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-cookie": "^8.0.1",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.0",
    "concurrently": "^9.1.2",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "vite": "^6.3.0",
    "wait-on": "^8.0.3"
  }
}
